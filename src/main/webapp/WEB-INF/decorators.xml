<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Exclude các API hoặc tệp không cần trang trí -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>

    <!-- Áp dụng mẫu admin -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/views/admin/*</pattern>
    </decorator>

    <!-- Áp dụng mẫu web -->
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>

